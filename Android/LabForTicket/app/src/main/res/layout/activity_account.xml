<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--顶部title-->
    <RelativeLayout
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:background="#298CCF"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/main_title_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:text="我的账户"/>
    </RelativeLayout>

    <!--内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e4e4e0"
        android:orientation="vertical"
        android:layout_below="@+id/main_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <!--分割线-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9"
            android:layout_marginTop="20dp"/>
        <!--用户名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="20dp"/>

            <Button
                android:id="@+id/account_username_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/account_right_arrow" />
        </LinearLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9" />
        <!--手机核验-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="手机核验"
                android:paddingLeft="20dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="(已通过核验)"
                android:textColor="#08e108"/>
            <Button
                android:id="@+id/account_phoneVerification_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/account_right_arrow"/>
        </LinearLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9" />
        <!--我的保险-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="我的保险"
                android:paddingLeft="20dp"/>
            <Button
                android:id="@+id/account_insurance_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/account_right_arrow"/>
        </LinearLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9" />
        <!--我的订餐-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="我的订餐"
                android:paddingLeft="20dp"/>
            <Button
                android:id="@+id/account_bookDinner_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/account_right_arrow"/>
        </LinearLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9"
            android:layout_marginTop="20dp"/>
        <!--出行导航-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="出行导航"
                android:paddingLeft="20dp"/>
            <Button
                android:id="@+id/account_travelNavigation_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/account_right_arrow"/>
        </LinearLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9" />
        <!--温馨服务-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="温馨服务"
                android:paddingLeft="20dp"/>
            <Button
                android:id="@+id/account_service_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/account_right_arrow"/>
        </LinearLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9" />
        <!--信息服务-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="信息服务"
                android:paddingLeft="20dp"/>
            <Button
                android:id="@+id/account_information_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/account_right_arrow"/>
        </LinearLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9"
            android:layout_marginTop="20dp"/>
        <!--旅行休闲-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="旅行休闲"
                android:paddingLeft="20dp"/>
            <Button
                android:id="@+id/account_travelLeisure_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/account_right_arrow"/>
        </LinearLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9"
            android:layout_marginTop="20dp"/>
        <!--系统通知-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="系统通知"
                android:paddingLeft="20dp"/>
            <Button
                android:id="@+id/account_systemNotification_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/account_right_arrow"/>
        </LinearLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9" />
        <!--关于-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="关于"
                android:paddingLeft="20dp"/>
            <Button
                android:id="@+id/account_about_btn"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/account_right_arrow"/>
        </LinearLayout>
        <!--分割线-->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cac9c9" />
    </LinearLayout>

    <!--底部主导航-->
    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom = "true">
        <Button
            android:id="@+id/bottom_order_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#302f2f"
            android:textColor="#ffffff"
            android:text="车票预订"/>
        <Button
            android:id="@+id/bottom_service_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#302f2f"
            android:textColor="#ffffff"
            android:text="商旅服务"/>
        <Button
            android:id="@+id/bottom_query_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#302f2f"
            android:textColor="#ffffff"
            android:text="订单查询"/>
        <Button
            android:id="@+id/bottom_account_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#302f2f"
            android:textColor="#ffffff"
            android:text="我的账户"/>
    </LinearLayout>
</RelativeLayout>
